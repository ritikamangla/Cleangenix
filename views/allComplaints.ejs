            <li><a href="index.html">Home</a></li>
            <li>Posts</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page">
      <div class="container">
        <div style="padding: 30px">
        <ul style="border:3px solid orange;  ">
          <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
                    <h5 style="text-align:center;color:<%=color%>;margin:10px;"><strong><%= error.message %> <a href="/user/complaints/view/resolved/<%=user_id%>"><span style="color: #FFD12B">: click here to view them</span></a></strong></h5>
                    <% }) %> <% } %>
                  </ul>
                </div>
        <div class="row searchFilter" >
          <div class="form group" >
            <form action="/user/complaints/view/filter/<%=user_id%>" method="POST">
              <div class="input-group ml-5" >
                <input class="form-control" list="distance"  name="distance" placeholder="Select the distance(km)">
                <datalist id="distance" >
                  <option value="1"></option>
                  <option value="3"></option>
                  <option value="5"></option>
                  <option value="7"></option>
                  <option value="10"></option>
                  <option value="12"></option>
                  <option value="50"></option>
                </datalist>
              
              <button id="searchBtn" type="submit" class="btn btn-secondary btn-search ml-1" > Search</button>
            </form>
          </div>
        </div>
      </div>
      <div class="container">
        
          <% complaints.forEach((complaint)=>{ %>
            <div class="blog-post" style="border: 4px solid #5cb874;">
              <div class="blog-post__img">
                <img src="<%=complaint.image.toString().substring(6,complaint.image.toString().length)%>" >
              </div>
              <div class="blog-post__info">
               <div class="blog-post__date">
                 <span><h6 class="blog-post__title">Posted on: </h6><%=complaint.date.toString().substring(0,15)%>, <%if (complaint.time!=undefined) {%><%=complaint.time.toString()%> <%} %></span>
                 <span></span>
               </div>
               <hr>
               <h6 class="blog-post__title">Location</h6>
               <p class="blog-post__text">
                <%=complaint.complaint_address%>
               </p>
               
              </div>
            </div>
         <% })%>
         
      </div>
    </section>

